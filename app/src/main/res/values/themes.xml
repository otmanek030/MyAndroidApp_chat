<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern light theme -->
    <style name="Theme.AudioRecorder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/modern_primary</item>
        <item name="colorPrimaryVariant">@color/modern_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/modern_accent</item>
        <item name="colorSecondaryVariant">@color/modern_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/modern_primary_dark</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>