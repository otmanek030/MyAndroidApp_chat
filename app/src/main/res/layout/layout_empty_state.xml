<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/spacing_xl">

    <!-- Empty State Illustration -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_mic_large"
        android:layout_marginBottom="@dimen/spacing_l"
        app:tint="@color/on_surface_variant"
        android:alpha="0.6" />

    <!-- Empty State Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_recordings_yet"
        style="@style/TextAppearance.AudioRecorder.EmptyState.Headline"
        android:layout_marginBottom="@dimen/spacing_s" />

    <!-- Empty State Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_recording_hint"
        style="@style/TextAppearance.AudioRecorder.EmptyState.Body"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/spacing_l" />

    <!-- Quick Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_recording_button"
        style="@style/Widget.AudioRecorder.Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_recording"
        app:icon="@drawable/ic_mic"
        app:iconGravity="textStart" />

</LinearLayout>
