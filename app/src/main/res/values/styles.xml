<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- =========================== -->
    <!-- APPARENCES DES FORMES       -->
    <!-- =========================== -->

    <style name="ShapeAppearance.AudioRecorder.CornerExtraSmall" parent="ShapeAppearance.Material3.Corner.ExtraSmall">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.AudioRecorder.CornerSmall" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.AudioRecorder.CornerMedium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.AudioRecorder.CornerLarge" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- =========================== -->
    <!-- STYLES DE BOUTONS          -->
    <!-- =========================== -->

    <style name="Widget.AudioRecorder.Button" parent="Widget.Material3.CardView.Elevated">
        <item name="cornerRadius">20dp</item>
        <item name="android:minHeight">48dp</item>
        <!-- FIXED: Replace paddingHorizontal with separate padding -->
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Widget.AudioRecorder.Button.Primary" parent="Widget.AudioRecorder.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="Widget.AudioRecorder.Button.Secondary" parent="Widget.AudioRecorder.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/on_secondary</item>
    </style>

    <style name="Widget.AudioRecorder.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- =========================== -->
    <!-- STYLES DE FAB              -->
    <!-- =========================== -->

    <style name="Widget.AudioRecorder.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="cornerRadius">56dp</item>
        <item name="elevation">6dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/on_primary</item>
    </style>

    <style name="Widget.AudioRecorder.FloatingActionButton.Extended" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="cornerRadius">24dp</item>
        <item name="elevation">6dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="iconTint">@color/on_primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <!-- =========================== -->
    <!-- STYLES DE CARTES           -->
    <!-- =========================== -->

    <style name="Widget.AudioRecorder.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.AudioRecorder.Card.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/surface_container</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- FIXED: Replace layout_marginVertical with separate margins -->
    <style name="Widget.AudioRecorder.RecordingCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Rest of your styles remain the same until... -->

    <!-- FIXED: PhotoPreviewCard parent -->
    <style name="PhotoPreviewCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/outline</item>
    </style>

    <!-- =========================== -->
    <!-- REST OF YOUR STYLES         -->
    <!-- =========================== -->

    <!-- Copy all other styles exactly as they are -->
    <style name="Widget.AudioRecorder.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="cornerRadius">8dp</item>
        <item name="boxStrokeColor">@color/outline</item>
        <item name="hintTextColor">@color/on_surface_variant</item>
        <item name="android:textColorHint">@color/on_surface_variant</item>
    </style>

    <style name="Widget.AudioRecorder.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Widget.AudioRecorder.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/on_surface</item>
        <item name="navigationIconTint">@color/on_surface</item>
    </style>

    <style name="Widget.AudioRecorder.MessageBubble" parent="Widget.AudioRecorder.Card">
        <item name="cornerRadius">18dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="Widget.AudioRecorder.MessageBubble.Device" parent="Widget.AudioRecorder.MessageBubble">
        <item name="cardBackgroundColor">@color/primary</item>
    </style>

    <style name="Widget.AudioRecorder.MessageBubble.Admin" parent="Widget.AudioRecorder.MessageBubble">
        <item name="cardBackgroundColor">@color/surface_variant</item>
    </style>

    <style name="Widget.AudioRecorder.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/outline_variant</item>
    </style>

    <style name="Widget.AudioRecorder.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/outline_variant</item>
    </style>

    <style name="QuestionCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/question_card_background</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="CategoryHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/category_header_background</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="QuestionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="HelpText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="PhotoButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="SubmitButton" parent="Widget.AudioRecorder.Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="EnhancedTextInput" parent="Widget.AudioRecorder.TextInputLayout">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/primary</item>
    </style>

    <style name="EnhancedRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="EnhancedCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.AudioRecorder.EmptyState.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="TextAppearance.AudioRecorder.EmptyState.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:alpha">0.6</item>
    </style>

</resources>